<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <androidx.cardview.widget.CardView
    android:id="@+id/cardLogo"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_marginStart="32dp"
    android:layout_marginTop="48dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/ivHeaderLogo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="?attr/doSkinLogo"
        android:scaleType="centerCrop"/>
</androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvBigTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTRO"
        android:textSize="30sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/cardLogo"
        app:layout_constraintBottom_toBottomOf="@id/cardLogo"
        app:layout_constraintTop_toTopOf="@id/cardLogo"
        android:layout_marginStart="16dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardLogo">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:padding="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="← Atrás"
                    android:textColor="#898E9C"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/tvSectionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Datos de Inicio"
                    android:textColor="@color/purple_end"
                    android:textSize="22sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="32dp">
                    <View
                        android:id="@+id/step1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/purple_end"
                        android:layout_marginEnd="4dp"/>
                    <View
                        android:id="@+id/step2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/purple_end"
                        android:layout_marginEnd="4dp"/>
                    <View
                        android:id="@+id/step3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#E0E0E0"
                        android:layout_marginEnd="4dp"/>
                    <View
                        android:id="@+id/step4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#E0E0E0"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/bg_input_rounded"
                    android:hint="Crea tu usuario:"
                    android:textColorHint="#898E9C"
                    android:paddingHorizontal="20dp"
                    android:maxLines="1"
                    android:layout_marginBottom="16dp"/>

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/bg_input_rounded"
                    android:hint="Crea tu contraseña"
                    android:inputType="textPassword"
                    android:textColorHint="#898E9C"
                    android:paddingHorizontal="20dp"
                    android:maxLines="1"
                    android:layout_marginBottom="16dp"/>

                <EditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/bg_input_rounded"
                    android:hint="Confirmar contraseña"
                    android:inputType="textPassword"
                    android:textColorHint="#898E9C"
                    android:paddingHorizontal="20dp"
                    android:maxLines="1"
                    android:layout_marginBottom="16dp"/>

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/bg_input_rounded"
                    android:hint="Correo electrónico"
                    android:inputType="textEmailAddress"
                    android:textColorHint="#898E9C"
                    android:paddingHorizontal="20dp"
                    android:maxLines="1"
                    android:layout_marginBottom="32dp"/>

                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Siguiente!"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/purple_end"
                    app:cornerRadius="30dp"/>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>