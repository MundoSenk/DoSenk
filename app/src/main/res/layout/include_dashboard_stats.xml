<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardStats"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="24dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutStatsGradient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"> <TextView
        android:id="@+id/tvDate"
        android:text="Lunes 15 Diciembre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/anton_regular"
        android:textSize="22sp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvTime"
        app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvTime"
            android:text="08:14:40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/anton_regular"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/tvDate"/>

        <TextView
            android:id="@+id/lblDisciplina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nivel de disciplina:"
            android:textColor="#CCFFFFFF"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toBottomOf="@id/tvDate"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"/> <TextView
            android:id="@+id/tvDisciplinaStatus"
            android:text="Desconocido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_capsule_white"
            android:paddingHorizontal="16dp"
            android:paddingVertical="4dp"
            android:textColor="?attr/doSkinButton"
            android:fontFamily="@font/anton_regular"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/lblDisciplina"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"/> <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@id/lblDisciplina">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingVertical="6dp"> <TextView
                android:text="DÃ­as con >Do:"
                android:textSize="9sp"
                android:textColor="#333"
                android:fontFamily="@font/poppins_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

                <TextView
                    android:text="0"
                    android:textSize="24sp"
                    android:textColor="?attr/doSkinButton"
                    android:fontFamily="@font/anton_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_marginTop="-2dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>