<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:text="Bienvenido, @User"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="?attr/doSkinSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="?attr/doSkinLogoSquare"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="?attr/doSkinStart">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿A qué te dedicas?"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginBottom="16dp"/>

            <CheckBox
                android:id="@+id/cbStudent"
                android:text="Estudiante"
                android:background="@drawable/bg_input_rounded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:id="@+id/cbEmployee"
                android:text="Empleado"
                android:background="@drawable/bg_input_rounded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:id="@+id/cbBusiness"
                android:text="Negocio Propio"
                android:background="@drawable/bg_input_rounded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/btnStartPainting"
                android:text="Siguiente!"
                android:backgroundTint="?attr/doSkinButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>