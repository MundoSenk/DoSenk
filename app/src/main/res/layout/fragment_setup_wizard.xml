<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">

    <include
        android:id="@+id/header"
        layout="@layout/include_dashboard_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <include
        android:id="@+id/stats"
        layout="@layout/include_dashboard_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="-20dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/stats"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="80dp"
            android:gravity="center_horizontal">

            <TextView
                android:text="¿Te dignas a ordenar tu vida?"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="?attr/doSkinSubtitle"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Perfecto! Ya era hora, @User.\nPermíteme conocer a mi nueva víctima..."
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#666"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardWizardQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:id="@+id/layoutWizardGradient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="?attr/doSkinStart"> <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_capsule_white"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:text="¿A qué te dedicas?"
                        android:textSize="16sp"
                        android:textColor="#999"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:src="@android:drawable/arrow_down_float"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:tint="#999"/>
                </LinearLayout>

                    <CheckBox
                        android:id="@+id/cbStudent"
                        android:text="Estudiante"
                        android:textColor="#555"
                        android:textStyle="bold"
                        android:buttonTint="?attr/doSkinButton"
                        android:background="@drawable/bg_capsule_white"
                        android:layout_marginBottom="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:paddingStart="16dp"/>

                    <CheckBox
                        android:id="@+id/cbEmployee"
                        android:text="Empleado"
                        android:textColor="#555"
                        android:textStyle="bold"
                        android:buttonTint="?attr/doSkinButton"
                        android:background="@drawable/bg_capsule_white"
                        android:layout_marginBottom="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:paddingStart="16dp"/>

                    <CheckBox
                        android:id="@+id/cbBusiness"
                        android:text="Negocio Propio"
                        android:textColor="#555"
                        android:textStyle="bold"
                        android:buttonTint="?attr/doSkinButton"
                        android:background="@drawable/bg_capsule_white"
                        android:layout_marginBottom="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:paddingStart="16dp"/>

                    <CheckBox
                        android:id="@+id/cbNone"
                        android:text="Nada de nada"
                        android:textColor="#555"
                        android:textStyle="bold"
                        android:buttonTint="?attr/doSkinButton"
                        android:background="@drawable/bg_capsule_white"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:paddingStart="16dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnStartPainting"
                android:text="Siguiente!"
                android:layout_marginTop="32dp"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:backgroundTint="?attr/doSkinButton"
                android:layout_width="220dp"
                android:layout_height="60dp"
                app:cornerRadius="30dp"/>

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/bottomNav"
        layout="@layout/include_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>