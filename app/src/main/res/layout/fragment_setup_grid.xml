<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <TextView
        android:id="@+id/tvPhaseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TÍTULO DINÁMICO"
        android:textSize="22sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="?attr/doSkinSubtitle"
        android:layout_margin="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintTop_toBottomOf="@id/tvPhaseTitle"
        app:layout_constraintBottom_toBottomOf="parent">

        <host.senk.dosenk.ui.custom.TimeGridPaintView
            android:id="@+id/timeGrid"
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:layout_marginHorizontal="16dp"/>
    </ScrollView>

    <Button
        android:id="@+id/btnNextPhase"
        android:text="Siguiente"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="24dp"
        app:cornerRadius="30dp"
        android:backgroundTint="?attr/doSkinButton"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>