    </style>

    <style name="Theme.DoSenk.Purple" parent="Base.Theme.DoSenk">
        <item name="doSkinStart">@color/purple_start</item>
        <item name="doSkinEnd">@color/purple_end</item>
        <item name="doSkinButton">@color/purple_end</item>
